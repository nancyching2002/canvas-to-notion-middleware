<div id="page">
    <h1>Canvas -> Notion!</h1>
    <form action ="/" method="POST">
        <div id="canvas">
            <label for="token">Enter Canvas Token</label>
            <input type ="text" id="'canvas_token" name="canvas_token" required>
        </div>
        <div id="notion1">
            <label for="token">Enter Notion Token</label>
            <input type ="text" id="'notion_token" name="notion_token" required>
        </div>
        <div id="notion2">
            <label for="token">Enter Notion Link to Database</label>
            <input type ="text" id="'notion_link" name="notion_link" required>
        </div>
        <button type="submit" onClick="getCanvas()">Generate in Notion</button>
    </form>
</div>
